{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@apis/*": ["./apis/*"],
      "types/*": ["./types/*"],
      "@components/*": ["./components/*"],
      "@constants/*": ["./constants/*"],
      "@features/*": ["./features/*"],
      "@hooks/*": ["./hooks/*"],
      "@pages/*": ["./pages/*"],
      "@styles/*": ["./styles/*"],
      "@public/*": ["./public/*"],
      "@config": ["../config.ts"],
      "@utils/*": ["./utils/*"],
      "@seo/*": ["./seo/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/utils/supabase.ts",
    "api/revalidateOnDataChange.js"
  ],
  "exclude": ["node_modules"]
}
